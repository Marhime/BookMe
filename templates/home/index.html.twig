{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block header %}
    <header class="business-header">
        <div class="container container-search">
            <div class="row">
                <div class="col-lg-12 px-5">
                    <h1 class="text-left pb-4 home-title">Trouvez et réservez des stands et des friteries uniques dans
                        toute la France. </h1>
                    <div class="search-bar">
                        <form class="form-horizontal" method="post" accept-charset="utf-8">
                            <!-- barre de recherche Homepage -->
                            <div class="input-group recherche">
                                <i class="fas fa-search fa-2x pl-3 my-auto"></i>
                                <input type="text" id="search-input" autocomplete="off" value=""
                                       class="form-control border-none search-input"
                                       placeholder="Que recherchez-vous?">
                                <div class="btn-container">
                                    <button type="submit" class="btn-custom">Rechercher</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
    
{% block body %}
    <div class="container">
        <h2 class="pt-3"> Les festivals en France </h2>

        <div id="hits"> <!-- Instantsearch.js nous permet de récupérer des événements stockés dans la base de donnée --> 
            <script type="text/html" id="hit-template">

                <div id="hit">
                    <a class="card cardlink" href="{{ path('root') }}event/{% verbatim %}{{{  objectID }}}{% endverbatim %}">
                        {% verbatim %}
                            <img class="card-img-top hit-image"src="{{{image}}}" alt="image de l'evenement">      
                            <div class="card-body pl-0" id="hit-content">
                                <p class="card-subtitle text-muted ">{{{_highlightResult.place.value}}}</p>
                                <h4 class="card-title">{{{_highlightResult.name.value}}}</h4>
                                <p class="card-text">{{{_highlightResult.description.value}}}</p>
                                <p class="card-subtitle text-muted">Réservation</p>
                            </div><hr>
                        {% endverbatim %}
                    </a>
               </div> 
            
            </script>
        </div>

    <div id="allevents">
        <a href="{{ path('events') }}">Afficher tous les festivals <i class=" fas fa-arrow-right"></i> </a> <!-- lien vers tous les événements -->
    </div>

    <script src="{{ asset('js/app.js') }}"></script> <!-- fichier javascript -->


    <!-- /.row -->
    </div>
{% endblock %}
