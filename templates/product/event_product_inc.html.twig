<div class="container my-5">
    <div class="row flex-items-xs-middle flex-items-xs-center">

        <!-- Table #1  -->
        {% for product in productEvent %}
        <div class="col-xs-12 col-lg-4">
            <div class="card text-xs-center">
                <div class="card-header">
                    <h1 class="card-title">
                        {{ product.type }}
                    </h1>
                    <h3 class="display-5">A partir de</h3>
                    <h3 class="display-5"><span class="currency">€</span>{{ product.price }}<span class="period">/jour</span></h3>
                </div>
                <div class="card-block">
                    <ul class="list-group">
                        <li class="list-group-item">{{ product.description }}</li>
                    </ul>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if product.event.owner.id == app.user.id %}
                            <a href="{{ path('delete_product', { 'id' : product.id }) }}"
                               class="btn btn-gradient mt-2">Supprimer</a>
                            <a href="{{ path('edit_product', { 'idProduct' : product.id, 'idEvent' : product.event.id }) }}"
                               class="btn btn-gradient mt-2">Modifier</a>
                        {% else %}
                            <a class="btn btn-gradient mt-2" href="#">Réserver</a>
                        {% endif %}
                    {% endif %}
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="btn btn-gradient mt-2" data-dismiss="modal" data-toggle="modal"
                           href="{{ path('login') }}"
                           data-target="#LoginModal">Réserver</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}