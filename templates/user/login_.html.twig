{% extends 'base.html.twig' %}
{% block body %}
    <form action="{{ path('login') }}" method="post" class="col-lg-3 mx-auto pt-4">
        {% if error %}
            <h5 class="alert alert-danger text-center"
            >{{ error.messageKey|trans(error.messageData, 'security') }}</h5>
        {% endif %}
        <div class="form-group">
            <label class="mb-0" for="username">
                <small>Adresse email</small>
            </label>
            <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp"
                   value="{{ last_username }}" placeholder="exemple@mail.fr">
        </div>
        <div class="form-group">
            <label class="mb-0" for="password">
                <small>Mot de passe</small>
            </label>
            <input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe">
        </div>
        <div class="text-center pt-2">
            <button class="btn btn-danger btn-lg" type="submit">Se connecter</button>
        </div>
    </form>
    </div>
    <div class="mt-2 mb-2">
        <p class="text-center">Vous n'avez pas de compte ? <a href="{{ path('register') }}">Inscription</a></p>
    </div>
{% endblock %}