<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}{% endblock %}BookMyFestival</title>

    <!-- Bootstrap core CSS -->

    <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/instantsearch.js@2.3/dist/instantsearch.min.css">
    <!-- Custom styles for this template -->
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.jpg') }}"/>
    <link href="{{ asset('css/business-frontpage.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style-search.css') }}">
    <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js"
            integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/instantsearch.js@2.3/dist/instantsearch.min.js"></script>


    {% block stylesheets %}{% endblock %}

</head>

<body>

<!-- Navigation -->
<!-- Button trigger modal -->
<nav class="navbar navbar-expand-lg border-bottom navbar-custom navbar-light fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand pt-2" href="{{ path('home') }}"><span class="text-custom">Book</span>MyFestival</a>
        <button class="navbar-toggler border-none" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                {% if is_granted('ROLE_ORGA') %}
                    <li class="nav-item pr-4">
                        <a class="nav-link" href="{{ path('addEvent') }}">Ajoutez votre festival</a>
                    </li>
                {% else %}
                    <li class="nav-item pr-4">
                        <a class="nav-link" data-toggle="modal" href="" data-target="#LoginModal">Ajoutez votre
                            festival</a>
                    </li>
                {% endif %}

                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item pr-4">
                        <a class="nav-link" href="{{ path('register') }}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="modal" href="" data-target="#LoginModal">Connexion</a>
                    </li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Mon Compte
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <h6 class="dropdown-header">{{ app.user.username }}</h6>
                            <a class="dropdown-item" href="{{ path('profile') }}">Modifier le profil</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- Header with Background Image -->
{% block header %} {% endblock %}


<div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="LoginModalLabel"
     aria-hidden="true">
    {% block modalLogin %}{% endblock %}
</div>

<div class="container mt-4">

    {% block body %}{% endblock %}
</div>
<!-- /.container -->


<pre-footer class="mt-3 bg-custom">
    <div class="container">
        <div class="row">
            <div class="pt-3 col-sm-4 col-xs-6">
                <ul>
                    <li>BookMyFestival</li>
                    <li><a class="pre-link" href={{ path('events') }}>Les festivals</a></li>
                    <li><a class="pre-link" href="#">Réservez un stand</a></li>
                </ul>
            </div>
            <div class="pt-3 col-sm-4 col-xs-6">
                <ul>
                    <li>Organisateurs</li>
                    <li><a class="pre-link" href={{ path('register') }}>Devenez organisateur</a></li>
                    <li><a class="pre-link" href="#{#{{ add.event }}#}">Ajoutez un festival</a></li>
                </ul>
            </div>
            <div class="pt-3 col-sm-4 col-xs-2">
                <ul>
                    <li>Besoin d'informations</li>
                    <li><a class="pre-link" href="#">Nous Contacter</a></li>
                    <li><a class="pre-link" href="#">Nos partenaires</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.container -->
</pre-footer>

<!-- Footer -->

<footer class="py-3 mt-3 bg-custom">
    <div class="container">
        <p class="pt-2 text-center text-black">Copyright &copy; BookMyFestival by HAMAN 2018</p>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js"
        integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+"
        crossorigin="anonymous"></script>
<script>
    $("#LoginModal").load("{{ path('login') }}");
</script>
{% block JavaScript %}{% endblock %}

</body>

</html>
